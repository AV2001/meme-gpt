{
    "version": 2,
    "routes": [
        { "src": "/api/(.*)", "dest": "index.mjs" },
        { "src": "/(.*)", "dest": "frontend/dist/$1" }
    ],
    "rewrites": [
        { "source": "/(.*)", "destination": "/frontend/dist/index.html" }
    ],
    "cleanUrls": true,
    "builds": [
        { "src": "index.mjs", "use": "@vercel/node" },
        {
            "src": "frontend",
            "use": "@vercel/static-build",
            "config": { "distDir": "frontend/dist" }
        }
    ]
}
