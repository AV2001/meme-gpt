{
    "version": 2,
    "rewrites": [
        { "source": "/api/(.*)", "destination": "/index.mjs" },
        { "source": "/(.*)", "destination": "/frontend/dist/$1" },
        { "source": "/(.*)", "destination": "/frontend/dist/index.html" }
    ],
    "cleanUrls": true,
    "builds": [
        { "src": "index.mjs", "use": "@vercel/node" },
        {
            "src": "frontend",
            "use": "@vercel/static-build",
            "config": { "distDir": "frontend/dist" }
        }
    ]
}
